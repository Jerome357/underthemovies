{% for quotes in quote %}
{% for personages in personage %}
{% for users in user %}
{% for movies in movie %}

	<div class="card">
		<div class="card-header">
			<p>{{ quotes.createdAt |date ('d-m-Y') }}</p>
		</div>
		<div class="card-body">
			<blockquote class="blockquote mb-0">
				<p>{{ quotes.content }}</p>
                <p>{{ personages.name}}</p>
				<footer class="blockquote-footer">{{ users.username }}
					in <cite title="Source Title">{{ movies.title}}</cite>
				</footer>
			</blockquote>
		</div>
	</div>

{% endfor %}
{% endfor %}
{% endfor %}
{% endfor %}
