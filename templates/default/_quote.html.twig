{% for quote in quotes %}

	<div class="text-right">
		{{ quote.user.username }}
		/
		{{ quote.createdAt |date ('d-m-Y') }}
	</div>
	<div class="card">
		<div class="card-header text-right">
			<p></p>
		</div>
		<div class="card-body">
			<blockquote class="blockquote mb-0">
				<p>{{ quote.content }}</p>
			</br>
			<div class="text-right">
				<p>
					{% for moviePersonage in quote.moviePersonages %}
						{{ moviePersonage.personage.name }},
						<a href="{{ path('movie', {'movie': moviePersonage.movie.title}) }}">
					{% endfor %}
				</p>
			</div>
		</blockquote>
		<div class="text-center">
			<a href="#" class="card-link">Citations du film</a>
		</div>
	</div>
</div></br>{% endfor %}
