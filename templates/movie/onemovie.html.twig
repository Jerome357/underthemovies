{% extends 'base.html.twig' %}


{% block body %}
    <div class="container my-5">
        <div class="d-flex justify-content-around">
{#            <div class="col-md-3">#}
{#                <img src="{{ asset("uploads/" ~ movie.picture) }} " width="100%" alt="{{ movie.title }}" class="#}
{#                fit-image">#}
{#            </div>#}
            <div class="col-md-9">
                <div>
                    <p>{{ movie.title }}</p></br>
                    {{ movie.releaseDate |date ('d-m-Y') }} </br>
                    {{ movie.director.firstname }}
                    {{ movie.director.lastname }} </br>
                    Cat√©gorie:
                    {% for category in movie.categories %}
                        {{ category.name }}
                    {% endfor %}
                </div>
            </div>
        </div>
        {% for moviePersonage in movie.moviePersonages %}
            <div class="d-flex row">
                <div>
                    <img src="{{ asset("uploads/" ~ moviePersonage.person.picture) }}" width=100%"
                         alt="{{ moviePersonage.person.lastname }}" class="fit-image">
                </div>
                <div class="card col-md-4 my-5">
                    <img src="img src="{{ asset("uploads/" ~ moviePersonage.person.picture) }} "width=100%"
                    alt="{{ moviePersonage.person.lastname }}" class="fit-image">
                    <div class="card-body">
                        <h5 class="card-title">Acteur :</h5>

                        <p class="card-text">
                            {{ moviePersonage.person.lastname }}
                            {{ moviePersonage.person.firstname }}
                        <p class="card-text">
                            <small class="text-muted">Voir ses citations</small>
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

