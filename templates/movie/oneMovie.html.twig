{% extends 'base.html.twig' %}


{% block body %}
    <div class="container my-5">
        <div class="d-flex justify-content-around">
            <div class="col-md-3">
                <img src="{{ asset("build/uploads/" ~ movie.picture) }} " width="100%" alt="{{ movie.title }}" class="
              fit-image">
            </div>
            <div class="col-md-9">
                <div>
                    <p>{{ movie.title }}</p></br>
                    {{ movie.releaseDate |date ('d-m-Y') }} </br>
                    {{ movie.director.firstname }}
                    {{ movie.director.lastname }} </br>
                    Cat√©gorie:
                    {% for category in movie.categories %}
                        {{ category.name }}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>


    <div class="container">
        <div class="row">
            {% for moviePersonage in movie.moviePersonages %}
                <div class="col-md-3">
                    <div class="card text-center">
                        <img class="img-thumbnail img-card"
                             src="{{ asset("build/uploads/" ~ moviePersonage.person.picture) }}"
                             alt="{{ moviePersonage.person.lastname }}">
                        <div class="card-body">
                            <p class="card-text">
                                <a href="{{ path('person', {'id': moviePersonage.person.id}) }}">
                                {{ moviePersonage.person.firstname }}
                                {{ moviePersonage.person.lastname }}
                                </a>
                            </p>
                            <p class="card-text">
                                    <div>Voir ses citations</div>
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>



{% endblock %}

