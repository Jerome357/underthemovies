{% extends 'base.html.twig' %}


{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-around">
        <div class="col-md-3">
            <img src="{{ asset("uploads/" ~ movie.picture) }}" alt="{{ movie.title }}" class="
              fit-image">
        </div>
        <div class="col-md-9">
            <div>
                <p>{{ movie.title }}</p></br>
                {{ movie.releaseDate |date ('d-m-Y') }} </br>
                {{ movie.director.firstname }}
                {{ movie.director.lastname }} </br>
                Cat√©gorie:
                {% for category in movie.categories %}
                    {{ category.name }}
                {% endfor %}
            </div>
        </div>
    </div>
</div>

{% endblock %}